{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://example.org/schema-2.json",
    "type": "object",
    "properties": {
        "address": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "Address",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uri"
                    },
                    "city": {
                        "type": "string"
                    },
                    "street": {
                        "type": "string"
                    },
                    "zip_code": {
                        "type": "string"
                    }
                },
                "required": ["id", "city", "street", "zip_code"]
            }
        }
    },
    "required": ["address"]
}
